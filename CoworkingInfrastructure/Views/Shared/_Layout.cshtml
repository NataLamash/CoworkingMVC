<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoworkingHub</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoworkingInfrastructure.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CoworkingHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Про нас</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CoworkingSpaces" asp-action="Index">Коворкінги</a>
                        </li>

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- Якщо користувач залогінений -->
                            //<p>@User.Identity.Name</p>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-primary">Вийти</button>
                            </form>

                            @if (User.IsInRole("admin"))
                            {
                                <li><a asp-controller="Users" asp-action="Index">Manage Users</a></li>
                            }
                        }
                        else
                        {
                            <!-- Якщо користувач НЕ залогінений -->
                            <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Увійти</a></li>
                            <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Зареєструватись</a></li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>


    @RenderSection("HeroSection", required: false)

    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CoworkingHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
